  "item": [
    {
      "name": "Registro y Login",
      "item": [
        {
          "name": "Registrar usuario (válido)",
          "event": [
            {
              "listen": "prerequest",
              "script": {
                "exec": [
                  "const email = `user_${Date.now()}@example.com`;",
                  "const password = \"Secret123!\";",
                  "pm.environment.set('uniqueEmail', email);",
                  "pm.environment.set('authEmail', email);",
                  "pm.environment.set('generatedPassword', password);"
                ],
                "type": "text/javascript"
              }
            },
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('HTTP 200', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "const body = pm.response.json();",
                  "pm.test('Mensaje de registro exitoso', function () {",
                  "    pm.expect(body.message).to.include('Usuario registrado');",
                  "});",
                  "",
                  "if (body.user) {",
                  "    pm.environment.set('authUserId', body.user.userId);",
                  "}"
                ],
                "type": "text/javascript"
              }
            }
          ],
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"{{uniqueEmail}}\",\n  \"password\": \"{{generatedPassword}}\",\n  \"firstName\": \"Test\",\n  \"lastName\": \"User\",\n  \"dni\": \"42233698\",\n  \"phoneNumber\": \"+54 9 11 1111 2222\",\n  \"role\": \"ADMIN\",\n  \"address\": [\n    {\n      \"state\": \"Buenos Aires\",\n      \"city\": \"Avellaneda\",\n      \"street\": \"Lavalle\",\n      \"number\": \"123\",\n      \"floor\": \"2\",\n      \"apartment\": \"B\"\n    }\n  ],\n  \"zones\": [],\n  \"skills\": []\n}"
            },
            "url": {
              "raw": "{{baseUrl}}/api/users/register",
              "host": [
                "{{baseUrl}}"
              ],
              "path": [
                "api",
                "users",
                "register"
              ]
            }
          },
          "response": []
        },
